<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.myanimation.ProgressActivity"
    android:layerType="none"
    >

    <com.google.myanimation.view.CircleProgressView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="1dp"
        android:id="@+id/circleProgressView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download_finish_progress_shap"
        android:layout_gravity="bottom"
        android:scaleType="center"
        android:id="@+id/imageView" />

    <!--<ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/downloading_progress_shape"
        android:id="@+id/progressBar"
        android:indeterminateDrawable="@drawable/custom_progress"
        />-->

    <com.google.myanimation.view.BackGroundView
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:animationCache="false"
        android:alwaysDrawnWithCache="false"
        android:persistentDrawingCache="none"
        android:background="#00ffffff"
        >

    </com.google.myanimation.view.BackGroundView>

</FrameLayout>
