<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:jupiter="http://schemas.android.com/apk/res-auto">
    <com.wandoujia.jupiter.toolbar.JupiterToolbar android:id="@id/jupiter_toolbar" android:layout_width="fill_parent" android:layout_height="wrap_content" jupiter:action_menu="@menu/menu_toolbar_explore" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/card_padding" android:paddingBottom="0.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_large">
                <TextView android:text="@string/community_ballot_author" style="@style/community_new_ballot_title" />
                <com.wandoujia.p4.views.CircleAsyncImageView android:id="@id/user_avatar" android:layout_width="@dimen/margin_huge" android:layout_height="@dimen/margin_huge" android:layout_marginRight="@dimen/margin_small" />
                <TextView android:textSize="@dimen/text_size_middle" android:textColor="@color/absolute_black" android:id="@id/user_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <View android:background="@color/dropdown_menu_list_divider_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginBottom="@dimen/margin_medium" />
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_large">
                <TextView android:id="@id/group_type_title" android:text="@string/community_ballot_group_type" style="@style/community_new_ballot_title" />
                <Button android:textSize="@dimen/text_size_large" android:textColor="@color/text_color_gray" android:gravity="center" android:id="@id/group_type" android:background="@drawable/aa_searchbox" android:layout_width="@dimen/app_comment_captcha_width" android:layout_height="@dimen/community_ballot_type_button_height" android:text="@string/community_ballot_group_type_choose" android:drawableRight="@drawable/ic_vertical_slide_arrow" />
            </LinearLayout>
            <View android:background="@color/dropdown_menu_list_divider_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginBottom="@dimen/margin_medium" />
            <TextView android:layout_marginBottom="@dimen/margin_medium" android:text="@string/community_ballot_group_title" style="@style/community_new_ballot_title" />
            <EditText android:textSize="@dimen/text_size_middle" android:id="@id/group_title" android:background="@drawable/aa_searchbox" android:padding="@dimen/padding_large" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_large" android:hint="@string/community_ballot_group_title_hint" android:singleLine="true" />
            <View android:background="@color/dropdown_menu_list_divider_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginBottom="@dimen/margin_medium" />
            <TextView android:layout_marginBottom="@dimen/margin_medium" android:text="@string/community_ballot_group_avatar" style="@style/community_new_ballot_title" />
            <ImageView android:id="@id/group_avatar" android:layout_width="@dimen/video_detail_icon_height" android:layout_height="@dimen/video_detail_icon_height" android:layout_marginBottom="@dimen/margin_large" android:src="@drawable/community_add_image" />
            <View android:background="@color/dropdown_menu_list_divider_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginBottom="@dimen/margin_medium" />
            <TextView android:layout_marginBottom="@dimen/margin_medium" android:text="@string/community_ballot_group_about" style="@style/community_new_ballot_title" />
            <EditText android:textSize="@dimen/text_size_middle" android:gravity="top" android:id="@id/group_about" android:background="@drawable/aa_searchbox" android:padding="@dimen/padding_large" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_large" android:hint="@string/community_ballot_group_about_hint" android:lines="4" />
            <Button android:textSize="@dimen/text_size_large" android:id="@id/submit_button" android:layout_width="fill_parent" android:layout_height="@dimen/community_ballot_type_button_height" android:text="@string/community_ballot" style="@style/card_action_button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>